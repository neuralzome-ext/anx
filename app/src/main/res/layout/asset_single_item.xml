<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/sensorImage"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginHorizontal="20dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_imu" />

    <TextView
        android:id="@+id/sensorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/metropolis_regular_webfont"
        android:text="phone"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="@color/white" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/assetStatusRecycler"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        tools:listitem="@layout/asset_status_single_item" />

    <TextView
        android:id="@+id/sensorAvailability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/metropolis_extralight_webfont"
        android:text="COMING SOON"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="gone"/>

</LinearLayout>
