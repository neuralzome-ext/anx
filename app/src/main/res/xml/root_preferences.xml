        app:isPreferenceVisible="false"
        app:fragment="com.flomobility.anx.app.fragments.settings.TerminalWidgetPreferencesFragment"/>

    <Preference
        app:key="about"
        app:title="@string/about_preference_title"
        app:persistent="false"/>
