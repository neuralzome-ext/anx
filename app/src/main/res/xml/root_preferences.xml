<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <Preference
        app:key="terminal"
        app:title="@string/terminal_preferences_title"
        app:summary="@string/terminal_preferences_summary"
        app:fragment="com.flomobility.anx.app.fragments.settings.TerminalPreferencesFragment"/>

    <Preference
        app:key="terminal_api"
        app:title="@string/terminal_api_preferences_title"
